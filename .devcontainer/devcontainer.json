{
    "name": "ROCm Bioinformatics Environment",
    "image": "clarity001/bioinformatics:splice-benchmark-rocm",
    "runArgs": [
      "--network=host",
      "--device=/dev/kfd",
      "--device=/dev/dri",
      "--ipc=host",
      "--shm-size=16G",
      "--group-add=video",
      "--cap-add=SYS_PTRACE",
      "--security-opt=seccomp=unconfined"
    ],
    
    "customizations": {
      "vscode": {
        "extensions": "${localExtensions}"
      }
    }
  }